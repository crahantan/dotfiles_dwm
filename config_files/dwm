#!/bin/sh

userresources=$HOME/.Xresources

#timezone
#exec timedatectl set-timezone America/Mexico_City &

#picom 
#exec picom --config $HOME/.config/picom/picom.conf &

#xcompmgr
exec xcompmgr -c -f -C -t-5 -l-5 -o.55 &

#xautolock
exec xautolock -time 60 -locker slock &

#slstatus
exec slstatus &

#PATHS && exports
export JAVA_HOME="/usr/lib/jvm/default-java"
export PATH=$HOME/.local/bin:$HOME/.local/bin/scripts:$JAVA_HOME/bin:$PATH
export QT_QPA_PLATFORMTHEME=gtk2
#java-dwm
export _JAVA_AWT_WM_NONREPARENTING=1
export AWT_TOOLKIT=MToolkit

#wal Xinerama mode
exec $HOME/.local/bin/wal -R &

#xfce-power-manager
exec /usr/bin/xfce4-power-manager &

#xfce-polkit
exec /usr/libexec/xfce-polkit &

#xrdb Xresources
exec xrdb -merge $HOME/.Xresources &

#monitor configuration
exec $HOME/.config/dwm/scripts/xrandr-selection & 

#dunst
exec dunst &

#dwm
while true; do
  # Log stderror to a file
  dwm 2>~/.dwm.log
  # No error logging
  #dwm >/dev/null 2>&1
done
